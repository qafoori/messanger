<h4 class="ui center aligned icon header text-white">
  <i class="circular red coffee icon"></i>
  Create a new account
</h4>


<div class="ui placeholder segment">
  <div class="ui two column very relaxed stackable grid">
    <div class="column">


      <%= form_with(model: @user, local: true, class: 'ui form') do |f| %>

        <div class="field">
          <%= f.label :username %>
          <div class="ui left icon input">
            <%= f.text_field :username, placeholder: 'Type your Username', type: 'text', required: true %>
            <i class="user icon"></i>
          </div>
        </div>

        <div class="field">
          <%= f.label :password %>
          <div class="ui left icon input">
            <%= f.text_field :password, placeholder: 'Type your Username', type: 'password', required: true %>
            <i class="user icon"></i>
          </div>
        </div>

        <div class="field">
          <div class="ui left icon width-100">
            <%= f.submit("Signup", class: 'ui blue submit button red left width-100') %>
          </div>
        </div>


      <% end %>


    </div>
    <div class="middle aligned column">
      <a href="<%= login_path %>" class="ui big button red">
        <i class="signup icon text-white"></i>
        Login
      </a>
    </div>
  </div>
  <div class="ui vertical divider">
    Or
  </div>
</div>
