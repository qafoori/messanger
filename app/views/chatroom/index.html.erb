<h4 class="ui center aligned icon header text-white">
  <i class="circular red coffee icon"></i>
  Say Something...
</h4>


<div class="ui two column grid">

  <div class="twelve wide column">

    <div class="ui card fluid raised chatbox">
      <div class="content messagesContainer">
        <div class="ui feed messageContainer" id='messageContainer'>
          <%= render @messages %>
        </div>
      </div>
      <div class="extra content">
        <%= form_for(@message, html: { class: 'ui reply form', role: 'form' }, url: message_path, remote: true) do |f| %>
          <div class="field">
            <div class="ui fluid icon input">
              <%= f.text_field :body, placeholder: 'Write a Message ...', type: 'text' %>
              <%= f.button '<i class="bordered inverted red paper plane outline icon"></i>'.html_safe,
                           class: 'button submit custom' %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <div class="four wide column">
    <div class="ui card fluid raised chatbox">
      <div class="content">
        <div class="ui inverted vertical menu">
          <a class="active item">
            Home
          </a>
          <a class="item">
            Messages
          </a>
          <a class="item">
            Friends
          </a>
        </div>
      </div>
    </div>
  </div>

</div>